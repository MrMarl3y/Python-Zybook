    #Define cups variables
juice_cups = float(input('Enter amount of lemon juice (in cups):\n'))
water_cups = float(input('Enter amount of water (in cups):\n'))
agave_cups = float(input('Enter amount of agave nectar (in cups):\n'))
total_serv = float (input('How many servings does this make?\n\n'))

    #Output info for base recipie
print('Lemonade ingredients - yields', f'{total_serv:.2f}', 'servings')
print(f'{juice_cups:.2f}', 'cup(s) lemon juice')
print(f'{water_cups:.2f}', 'cup(s) water')
print(f'{agave_cups:.2f}', 'cup(s) agave nectar\n')

    #Define custom amount based on servings
make = float(input('How many servings would you like to make?\n\n'))

    #Output cups needed for recipie based on servings requested
print('Lemonade ingredients - yields',f'{make:.2f}', 'servings')
print(f'{make / total_serv * juice_cups:.2f}', 'cup(s) lemon juice')
print(f'{make / total_serv * water_cups:.2f}', 'cup(s) water')
print(f'{make / total_serv * agave_cups:.2f}', 'cup(s) agave nectar\n')

    #Convert recipe from cups to gallons
print('Lemonade ingredients - yields',f'{make:.2f}','servings')
print(f'{make / total_serv * juice_cups / 16:.2f}', 'gallon(s) lemon juice')
print(f'{make / total_serv * water_cups / 16:.2f}', 'gallon(s) water')
print(f'{make / total_serv * agave_cups / 16:.2f}', 'gallon(s) agave nectar')
